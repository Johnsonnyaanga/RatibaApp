<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:padding="2dp">
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="6dp"
        android:id="@+id/item_card_update"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:padding="2dp"
        android:translationZ="4dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
               <ImageView
                   android:layout_weight="7"
                   android:visibility="visible"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_note"
                   />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginTop="@dimen/_7sdp"
                        android:id="@+id/notes_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Android Programming"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/notesdesc_text_id"
                        android:layout_width="match_parent"
                        android:maxLength="45"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp"
                        android:textColor="#8B000000"
                        android:text="Learn about android archtecture components and Jetpack compose libraries."
                        />
                </LinearLayout>


            </LinearLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/notesdate_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Sun,March 25,6:00"
                android:textColor="#1B6EAF"
                android:textSize="12sp" />



        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>